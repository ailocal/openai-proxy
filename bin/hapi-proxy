#!/bin/bash

# Exit on error
set -e

## TODO - Update endpoints based on ENV vars?

# Start HAProxy with our config
CONFIG_FILE="$(dirname "$0")/../config/haproxy/hapi-proxy.cfg"
PID_FILE="/tmp/ailocal-haproxy.pid"

# Check if already running
if [ -f "$PID_FILE" ]; then
    OLD_PID=$(cat "$PID_FILE")
    if kill -0 "$OLD_PID" 2>/dev/null; then
        echo "HAProxy is already running with PID $OLD_PID"
        exit 1
    else
        rm -f "$PID_FILE"
    fi
fi

cleanup() {
    echo "Shutting down HAProxy..."
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID" 2>/dev/null || true
        rm -f "$PID_FILE"
    fi
    exit 0
}

# Set up signal handling
trap cleanup SIGINT SIGTERM

# Start HAProxy in foreground mode
echo $$ > "$PID_FILE"
exec haproxy -V -d -f "$CONFIG_FILE" -W -db
